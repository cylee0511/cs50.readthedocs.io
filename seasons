from datetime import date, datetime
import sys
from num2words import num2words

def main():
    dob_str = input("Date of Birth: ")
    try:
        dob = datetime.strptime(dob_str, "%Y-%m-%d").date()
    except ValueError:
        print("Invalid date")
        sys.exit(1)

    today = date.today()
    minutes = calculate_age_in_minutes(dob, today)
    minutes_in_words = convert_minutes_to_words(minutes)
    print(f"{minutes_in_words} minutes")

def calculate_age_in_minutes(dob, today):
    delta = today - dob
    total_minutes = delta.days * 24 * 60
    return total_minutes

def convert_minutes_to_words(minutes):
    words = num2words(minutes)
    #words = words.replace(",", "")
    #words = words.replace(" and", "")
    #return words.replace("-", " ")
    return words

if __name__ == "__main__":
    main()
